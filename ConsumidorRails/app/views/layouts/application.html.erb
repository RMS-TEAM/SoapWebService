<!DOCTYPE html>
<html>
<head>
  <title>SoapApp</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>
    <div id="header">
      <div class="nav">
        <div class="logo">
          <h1>BEC</h1>
        </div>
        <div class="bar">
          <%= link_to 'Home', '/' %>  |
          <%= link_to 'About', '/about' %>

        </div>
      </div>
    </div>

  <div id="content">
    <% flash.each do |key, value| %>
         <div class="flash <%= key %>"><%= value %></div>
    <%  end %>
    <%= yield %>
  </div>

  <div id="footer">
        <%= image_tag("pse.gif") %>
  </div>

</body>
</html>
